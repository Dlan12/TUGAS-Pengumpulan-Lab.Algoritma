#include <iostream>
using namespace std;

int main() {
  char nama[25]; // untuk memasukan nama input
  int nilai_a, nilai_b, nilai_c, rata2, hadiah; // singkat aja
  cout << "Program Hitung Nilai Rata-Rata " << endl;
  // setiap variebel wajib di gunakan tanda endl;
  cout << "Nama Siswa           : ";
  cin >> nama;
  cout << "Nilai Pertandingan 1 : ";
  cin >> nilai_a;
  cout << "Nilai Pertandingan 2 : ";
  cin >> nilai_b;
  cout << "Nilai Pertandingan 3 : ";
  cin >> nilai_c;
  cout << endl;

  rata2 = (nilai_a + nilai_b + nilai_c) / 3;
  cout << "Siswa yang bernama " << nama << endl;
  cout << "Memperoleh nilai rata-rata " << rata2
       << "\nMaka dari hasil perlombaan yang diikutinya" << endl;
  if (rata2 >= 85) {
    cout << "Hadiah yang di dapat adalah Komputer Core I5" << endl;
  } // Jika sudah menuliskan ouput, gaush nulis hadiah yg di int
  else if (rata2 >= 70) {
    cout << "Hadiah yang di dapat adalah Uang sebesar Rp. 2.500,000." << endl;
  } else if (rata2 < 70) {
    cout << "Hadiah yang di dapat adalah hadiah Hiburan" << endl;
  }

  getchar();
}
